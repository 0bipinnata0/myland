{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./tsup.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}